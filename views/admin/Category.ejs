
<%- include("../admin/layouts/adminHeader.ejs") %>


<body class="g-sidenav-show  bg-gray-200">
  <%- include("../admin/layouts/adminSideBar.ejs") %>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
      <!-- Navbar -->
      <%- include("../admin/layouts/adminNavBar.ejs") %>
      <!-- End Navbar -->
      <div class="container-fluid py-4">
        <div class="row">
          <div class="col-12 , elemDesign">
            <div class="card my-4">
             <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 elemDesign2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                    <a href="/admin/add_category">
                        <button type="button" class="btn btn-success btn-md float-right mr-5" id="addButton">Add</button>
                      </a>
                  <h6 class="text-white text-capitalize ps-3">CATEGORIES</h6>
                </div>
              </div>
              <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0" ">
                  <table class="table table-dark">
                    <thead>
                      <tr>
                              <% if(categoryData.length>0) {%>
                          <th style="font-size: large;"> Number </th>
                          <th style="font-size: large;"> Category Name </th>
                          <th style="font-size: large;"> Edit </th>
                          <th style="font-size: large;"> Action </th>
                      </tr>
                    </thead>
                    <tbody>
                        
                      <% categoryData.forEach((data,i)=>{ %>
                        <tr>
                          <td style="color: rgb(203, 217, 230);">
                            <%= i + 1 %>
                          </td>
                          <td style="color: rgb(194, 208, 220);">
                            <%= data.name %>
                          </td>     
                         <td><a href= "/admin/edit_category?id=<%= data._id %>"><button type="button" class="btn btn-primary btn-sm" style="color: rgb(255, 255, 255);">Edit</button></a></td>
                         <td>
                          <% if( data.is_active === true){ %>
                            <a href="/admin/is_active?id=<%= data._id %>">
                          <button type="button" class="btn btn-success btn-md">List</button></a>
                            <% }else{ %>
                              <a href="/admin/is_active?id=<%= data._id %>">
                                <button type="button" class="btn btn-outline-secondary btn-md">Unlist</button></a>
                              <%}%>
                         </td>
                        </tr>
                        <% })%>
                          <%}else{%>
                            <%}%>
                     
                    </tbody>
                  </table>
                  
                </div>
              </div>
            </div>
          </div>
        </div>
    
      </div>
    </main>
  
<%- include("../admin/layouts/adminFooter.ejs") %>