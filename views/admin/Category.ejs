              <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0" >
                  <table class="table table-dark">
                    <thead >
                      <tr>
                              <% if(categoryData.length>0) {%>
                          <th style="font-size: large; text-align: center;"> Number </th>
                          <th style="font-size: large; text-align: center;"> Category Name </th>
                          <th style="font-size: large; text-align: center;"> Edit </th>
                          <th style="font-size: large; text-align: center;"> Action </th>
                      </tr>
                    </thead>
                    <tbody class="tableBody">
                        
                      <% categoryData.forEach((data,i)=>{ %>
                        <tr>
                          <td style="color: rgb(203, 217, 230); text-align: center;">
                            <%= i + 1 %>
                          </td>
                          <td style="color: rgb(194, 208, 220); text-align: center;">
                            <%= data.name %>
                          </td>     
                         <td style="text-align: center;"><a href= "/admin/edit_category?id=<%= data._id %>"><button type="button" class="btn btn-primary btn-sm" style="color: rgb(255, 255, 255);">Edit</button></a></td>
                         <td style="text-align: center;">
                          <% if( data.is_active === true){ %>
                            <a href="/admin/is_active?id=<%= data._id %>">
                          <button type="button" class="btn btn-success btn-md">List</button></a>
                            <% }else{ %>
                              <a href="/admin/is_active?id=<%= data._id %>">
                                <button type="button" class="btn btn-outline-secondary btn-md">Unlist</button></a>
                              <%}%>
                         </td>
                        </tr>
                        <% })%>
                          <%}else{%>
                            <%}%>
                     
                    </tbody>
                  </table>
                         <!-- Pagination -->
        

