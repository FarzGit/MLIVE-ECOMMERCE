  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg">
    <!-- Navbar -->
    <%- include("../admin/layouts/adminNavBar.ejs") %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12 col-md-8 col-lg-9 elemDesign" style="width: 1320px;">
          <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 elemDesign2">
              <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                <a href="/admin/add_banner">
                  <button type="button" class="btn btn-success btn-md float-right mr-5" id="addButton">Add</button>
                </a>
                <h6 class="text-white text-capitalize ps-3">BANNER MANAGEMENT</h6>
              </div>
            </div>
            
            
            <div class="card-body px-0 pb-2">
              <div class="table-responsive">
                <table class="table ">
                  <thead>
                    <tr >
                      <th style="text-align: center;">#</th>
                      <th class=" d-flex justify-content-center text-align: center;" > Banner</th>
                      <th style="padding-left: 40px; text-align: center;"> Type </th>
                      <!-- <th> Description </th> -->
                      <th style="padding-left: 40px; text-align: center;">URL</th>
                      <th style="padding-left: 40px; text-align: center;"> Head </th>
                      <th style="padding-left: 40px; text-align: center;"> Action</th>
                    </tr>
                  </thead>
                  <tbody>
                    
                 
                    <% banners.forEach(function(banners, index) { %>
                      <tr style="height: 140px;">
                        <td style="text-align: center;"><%= index + 1 %></td>
                        <td style="padding-block: 50px; text-align: center;">
                            <img style="width:250px; height: auto;border-radius: 0;"  src="/static/products/banner/<%= banners.image %>" alt="images">
                        </td>
                        <td style="padding-block: 50px; text-align: center;" class="description-cell">
                          <div class="description-content">
                            <%= banners.typeHead%>
                          </div>
                          <p class="toggle-url btn " data-bs-toggle="modal" data-bs-target="#typedetails-<%= banners._id %>">Show More >></p>
                        </td>
                        <!-- <td class="description-cell" style="padding-block: 50px;">
                          <div class="description-content">
                            <%= banners.description %>
                          </div>
                          <p class="toggle-description btn">Show More >></p>
                        </td> -->
                        <td class="description-cell" style="padding-block: 50px; text-align: center;">
                          <div class="description-content"  style="padding-left: 38px;">
                           <%= banners.bannerURL%>
                          </div>
                          <p class="toggle-url btn " data-bs-toggle="modal" data-bs-target="#urldetails-<%= banners._id %>">Show More >></p>
                        </td>
                          
                        <td style="padding-block: 50px; text-align: center;" class="description-cell"> 
                          <div class="description-content text-center" >
                           <%= banners.mainHead %> 
                          </div>
                           <p class="toggle-url btn " data-bs-toggle="modal" data-bs-target="#headdetails-<%= banners._id %>">Show More >></p>
                          </td>
                        <td style="padding-block: 50px; padding-left: 30px; text-align: center;">

                          
                          
                        
                            <div class="col"> <!-- Added a div with the "col" class -->

                              <a href="/admin/editBanner?id=<%= banners._id %>">
                                <button type="button" class="btn btn-primary btn-sm">Edit</button>
                              </a>
                              
                                <%if(banners.status === true){%>
                                <a href="/admin/listUnlist?id=<%= banners._id %>">
                                    <button type="button" class="btn btn-success btn-sm ">List</button>
                                </a>
                              <%}else{%>
                        
                                <a href="/admin/listUnlist?id=<%= banners._id %>">
                                    <button type="button" class="btn btn-outline-secondary btn-sm">Unlist</button>
                                </a>
                              <%}%>
                             
                            </div>

                          
                        </td>



                         <!-- ==========modalDeatil -->
                         <div class="modal fade" id="urldetails-<%= banners._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title " id="staticBackdropLabel" style="margin-left: 160px;">FULL URL</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <%= banners.bannerURL%>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                               
                              </div>
                            </div>
                          </div>
                        </div>


                        <div class="modal fade" id="typedetails-<%= banners._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title " id="staticBackdropLabel" style="margin-left: 160px;">FULL TYPE DETAILS</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <%= banners.typeHead%>
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                               
                              </div>
                            </div>
                          </div>
                        </div>


                        <div class="modal fade" id="headdetails-<%= banners._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                          <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                              <div class="modal-header">
                                <h5 class="modal-title " id="staticBackdropLabel" style="margin-left: 160px;">FULL TYPE DETAILS</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                              </div>
                              <div class="modal-body">
                                <%= banners.mainHead %> 
                              </div>
                              <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                               
                              </div>
                            </div>
                          </div>
                        </div>
                        
                      </tr>
                      
                      
                    <% }); %>
                  </tbody>
                </table>
              </div>




            </div>
          </div>
        </div>
        <div class="col-12 col-md-4 col-lg-3 elemDesign">
          <!-- Sidebar content for medium and large screens -->
        </div>
      </div>
    </div>

     







  </main>


 

  <%- include("../admin/layouts/adminFooter.ejs") %>
</body>


