      <div class="container-fluid py-4">
        <div class="row">
          <div class="col-12 col-md-8 col-lg-9 elemDesign" style=" width: 1320px;">
            <div class="card my-4">
              <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2 elemDesign2">
                <div class="bg-gradient-primary shadow-primary border-radius-lg pt-4 pb-3">
                  <a href="/admin/addcouponManagement">
                    <button type="button" class="btn btn-success btn-md float-right mr-5" id="addButton">Add</button>
                  </a>
                  <h6 class="text-white text-capitalize ps-3">COUPON MANAGEMENT</h6>
                </div>
              </div>
              <div class="card-body px-0 pb-2">
                <div class="table-responsive p-0">
                  <table class="table table-dark table-striped">
                    <thead>
                      <tr>
                        <th class="text-center">Name</th>
                        <th class="text-center">Code</th>
                        <th class="text-center">minimumSpend</th>
                        <th class="text-center">DiscountAmount</th>
                        <th class="text-center">ValidFrom</th>
                        <th class="text-center">ValidTo</th>
                        <th class="text-center">usersLimit</th>
                        <th class="text-center">usedUsers</th>
                        <th class="text-center">Description</th>
                        <th class="text-center">Edit</th>
                        <th class="text-center">Action</th>


                      </tr>
                    </thead>
                    <tbody style="text-align: center;">
                      <%couponItems.forEach((coupon)=>{%>
                        <% var dateFrom=new Date(coupon.validFrom); %>
                           <% var dateTo=new Date(coupon.validTo); %>
                            <% const options = { year: 'numeric', month: '2-digit', day: '2-digit' };%>
                        <tr>
                          <td  style="color: aliceblue; padding-block: 42px;" class="text-center ">
                            <%= coupon.couponName %>
                          </td>
                          <td style="color: aliceblue; padding-block: 42px;" class="text-center">
                            <%= coupon.couponCode %>

                          </td>
                          <td style="max-width: 200px; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; color: aliceblue; padding-block: 42px; text-align: center;">
                            <%= coupon.minimumSpend %>
 
                        </td>
                          <td style="color: aliceblue; padding-block: 42px;" class="text-center">
                            <%= coupon.discountAmount %>

                          </td>
                          <td style="color: aliceblue; padding-block: 42px;" class="text-center">
                            <%= dateFrom.toLocaleDateString(undefined, options) %>

                          </td>
                          <td style="color: aliceblue; padding-block: 42px;" class="text-center">
                            <%= dateTo.toLocaleDateString(undefined, options) %>

                          </td>
                          <td style="color: aliceblue; padding-block: 42px;" class="text-center">
                            
                            <%= coupon.usersLimit %>

                          </td>
                          <td style="color: aliceblue; padding-block: 42px; " class="text-center">
                            <%= coupon.usedUsers.length %>

                          </td>
                          <td style="padding-block: 42px;">
                            
                         <button type="button" class="btn btn-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#details-<%=coupon._id %>" style="color: rgb(255, 255, 255);">
                              Detail
                        </button>


                        </td>
                        
                          <td style="padding-block: 42px;">
                            <a href="/admin/editcouponManagement?id=<%= coupon._id %>"><button type="button" class="btn btn-primary btn-sm" style="color: rgb(255, 255, 255);">Edit</button></a>
                          </td>
                          
                           

                              <td style="padding-block: 42px;">
                                  <a href="#"><button type="button" class="btn btn-danger btn-sm" style="color: rgb(255, 255, 255); "data-bs-target="#mod<%= coupon._id %>" data-bs-toggle="modal"
                                    data-bs-target="#mod">
                                    Remove
                                  </button></a>
                                
                                
                              </td>


                              <!-- ==========modalDeatil -->
                              <div class="modal fade" id="details-<%=coupon._id %>" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-centered">
                                  <div class="modal-content">
                                    <div class="modal-header">
                                      <h5 class="modal-title " id="staticBackdropLabel" style="margin-left: 160px;">DESCRIPTION</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                      <%= coupon.description %>
                                    </div>
                                    <div class="modal-footer">
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                     
                                    </div>
                                  </div>
                                </div>
                              </div>


                              
                       
                        </tr>

                          <!-- modelDelete -->
                          <div class="modal fade" id="mod<%=coupon._id %>" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                                        <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                        <div class="modal-header">
                                        <!-- <h1 class="modal-title fs-5" id="exampleModalLabel">
                                        Modal title</h1> -->
                                        <p class="modal-title text-dark fw-bold"> <b
                                        class="mdi mdi-comment-alert text-warning"></b>
                                        Are you sure you want to
                                        delete this Coupon</p>
                                        <button type="button" class=" btn mdi mdi-close" data-bs-dismiss="modal"
                                        aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">

                                        <div class="card mb-3 bg-dark"
                                        style="max-width: 540px;">
                                        <div class="row g-0 ">

                                        <div class="col-md-12">
                                        <div class="card-body mx-auto">
                                        <h2 class="card-title text-center " style="color: white;">
                                        <%= coupon.couponCode %>
                                        </h2>

                                         %>
                                        </p>
                                        <p class="card-text" style="color: white;">Discount Amount: <%=coupon.discountAmount%></p>
                                        <p class="card-text" style="color: white;">This Expiring on: <%= dateTo.toLocaleDateString() %></p>

                                        </div>
                                        </div>
                                        </div>
                                        </div>

                                        <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary"
                                         data-bs-dismiss="modal">Not
                                        Now</button>
                                        <a type="button" href="/admin/deletecouponManagement?id=<%= coupon._id%>"
                                        class="btn btn-danger">Delete
                                        Now</a>
                                        </div>
                                        </div>
                                        </div>
                                        </div>

                      <%})%>

                     
                    </tbody>
                  </table>


                  
                  <!-- Pagination -->
        

        <!-- Pagination End -->
                </div>
              </div>
