            }else{
                res.json({action:failed})
            }
           })
    }





    function cartCount(productId,userId,count){
        const quantity=parseInt(document.getElementById(productId).innerHTML)
        count = parseInt(count)
        if(count==-1 && quantity==0){
            removeProduct(productId)
        }else{
            $.ajax({
            url:'/cart-quantity',
            method: "post",
            encoded: true,
            data:{
               product:productId,
               user:userId,
               count:count,
               quantity:quantity
            },
             }).done((data)=>{
                if(data){
                    document.getElementById(productId).innerText = quantity +count
                    //  location.reload()
                    // $(proId).html(data);
                    // alert(data)
                }else{
                    alert('failed')
                }
             })
        }
        
        
    }
</script>

