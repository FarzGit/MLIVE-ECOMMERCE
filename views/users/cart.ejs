<script>
  // Function to handle the checkout process
  function checkout() {
    $.ajax({
      type: "GET",
      url: "/checkout", // Update the URL to your server endpoint
      dataType: "json",
      success: function (response) {
        // Handle the response from the server
        if (response.quantity) {
         
          swal.fire({
            icon: "error",
