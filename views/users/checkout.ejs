  function verifyPayment(payment, order) {
    const amount2 = document.getElementById("total2").innerHTML;
    $.ajax({
  url: "/verifyPayment",
  method: "post",
  data: {
    payment: payment,
    amount2: amount2,
    order: order,
  },
  success: (response) => {
    if (response.codsuccess == true) {
      location.href = `/orderPlaced/${response.orderid}`;
    } else {
      swal.fire({
        positon: "center",
        icon: "error",
