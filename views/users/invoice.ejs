<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
<link rel="icon" type="image/x-icon" href="/assets/logo-images/e2938d67761f2fca54c4c8da54bc2793.jpg">
<link rel="stylesheet" href="/static/shopcss/invoice.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
<div class="container w-75">
    <div class="row">
        <!--INVOICE START-->
        <div class="col-12">
            <div class="grid invoice">
                <div class="grid-body">
                    <div class="invoice-title">
                        <div class="row">
                            <div class="col-12">
                                <img src="/static/userAssets/images/icons/logo black inter.png" alt="" height="35">
                            </div>
                        </div>
                        <br>
                        <div class="row">
                            <div class="col-12">
                                <h2 class="fw-bold">M LIVE | Invoice</h2>
                                <h2>
                                    <span class="small fs-5">Order ID: <%=order._id %></span>
                                </h2>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col-6">
                            <address>
                                <strong>Billed To:</strong><br>
                                <%=order.firstName %>
                                    <%=order.deliveryDetails %><br>
                                        
                                               
                            </address>
                        </div><br>
                        <div class="col-6 text-end">
                            <address>
                                <strong>Shipped To:</strong><br>
                                <%=order.firstName %>
                                    <%=order.deliveryDetails %><br>
                                        
                            </address>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-end">
                        <div class="col-6">
                            <address>
                                <strong>Payment Method:</strong><br>
                                <%=order.paymentMethod%><br><br>
                                    
                            </address>
                        </div>
                        <div class="col-6 text-end">
                            <address>
                                <strong>Order Date:</strong><br>
                                <% const dd=order.date.getDate(); const mm=order.date.getMonth() + 1; const
                                    yyyy=order.date.getFullYear(); const formattedDate=`${dd}-${mm}-${yyyy}`; %>
                                    <%=formattedDate %><br>
                            </address>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 mt-4">
                            <h3>ORDER SUMMARY</h3>
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr class="line">
                                            <td><strong>#</strong></td>
                                            <td class=""><strong>Products</strong></td>
                                            <td class="text-center"><strong>Qty</strong></td>
                                            <td class="text-end"><strong>Rate</strong></td>
                                            <td class="text-end"><strong>Discount</strong></td>
                                            <td class="text-end"><strong>Subtotal</strong></td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <%order.products.forEach((prod)=>{ %>
                                            <tr>
                                                <td><%=order.products.indexOf(prod) +1 %></td>
                                                <td>
                                                    <%=prod.productId.productName
                                                    %>
                                                </td>
                                                <td class="text-center"><%=prod.quantity %></td>
                                                <td class="text-end">₹<%=prod.productId.price %></td>
                                                <td class="text-end">-₹<%=order.discount%></td>
                                                <td class="text-end">₹ <%=prod.productId.price %></td>
                                            </tr>
                                            <% }) %>
                                                <tr>
                                                    <td colspan="3"></td>
                                                    <td></td>
                                                    <td class="text-end"><strong>Taxes</strong></td>
                                                    <td class="text-end"><strong>N/A</strong></td>
                                                </tr>
                                                <tr>
                                                    <td colspan="3">
                                                    </td>
                                                    <td></td>
                                                    <td class="text-end"><strong>Total</strong></td>
                                                    <td class="text-end"><strong>₹ <%=order.totalAmount %></strong>
                                                    </td>
                                                </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-end identity">
                            <p>Authorized<br><strong>M LIVE</strong></p>
                        </div>
                    </div>
                    <div class="print text-end">
                        <a onclick="window.print()" class="btn btn-success"><i class="bi bi-printer-fill"></i></a>
                    </div>
                </div>
            </div>
        </div>
        <!-- INVOICE END-->
    </div>
</div>
